@model UserLogInViewModel
@{
    ViewData["Title"] = "Log In to your Account";
}

<div class="d-flex justify-content-between">
    <h1 classs="display-4">Log In to your Account</h1>
    <form method="post" class="col-10 col-xl-6" novalidate>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email address</label>
            <input asp-for="Email" class="form-control" />
            <small class="text-danger"><span asp-validation-for="Email"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <small class="text-danger"><span asp-validation-for="Password"></span></small>
        </div>

        <div class="mt-5">
            <div class="d-grid">
                <button type="submit" class="btn btn-success">LOG IN NOW</button>
            </div>
        </div>


    </form>
</div>